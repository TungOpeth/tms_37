<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:supervisor, @course] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :instruction %>
      <%= f.text_area :instruction, class: 'form-control' %>

      <%= f.label :start_date, "Start date" %>
      <%= f.date_field :start_date, class: 'form-control' %>

      <%= f.label :end_date, "End date" %>
      <%= f.date_field :end_date, class: 'form-control' %>
      <h1>Add Subject to Course</h1>

      <div>
        <%= f.fields_for :course_subjects do |cs| %>
          <li>
            <%= cs.label :subject_id, cs.object.subject.name %>
            <%= cs.check_box :subject_id, {checked: false}, cs.object.subject.try(:id), nil%>
          </li>
        <% end%>
      </div>

      <%= f.submit @course.id.nil? ? "Create new course" : "Update course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

